{
  "extends": "./tsconfig",
  "include": ["src/**/*", "**/*.js", "**/*.ts", "**/*.tsx", "./index.ts"],
  "exclude": [
    "node_modules",
    "dist",
    "coverage",
    "docs",
    "docs-build",
    "src/jestSetup",
    "__mocks__",
    "./*.js",
    "./*.ts",
    "src/**/*.test.tsx",
    "src/**/*.stories.tsx"
  ]
}
